{
  "name": "blockchain",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": false,
  "bin": "./dist/service/index.js",
  "pkg": {
    "scripts": [
      "./public/assets/**/*.js"
    ],
    "assets": [
      "./public/assets/**/*",
      "./dist/service/views/**/*"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.5.5",
    "@babel/node": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/register": "^7.9.0",
    "eslint": "^6.3.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "jest": "^25.1.0",
    "nodemon": "^1.19.1"
  },
  "scripts": {
    "start": "babel-node ./src/service/index.js",
    "start:2": "HTTP_PORT=3001 P2P_PORT=5001 PEERS=ws:localhost:5000 yarn start",
    "nodemon": "nodemon --exec yarn start",
    "lint": "eslint index.js src",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "miner": "babel-node miner.js",
    "clean": "rm -rf dist && mkdir dist",
    "build": "yarn clean && babel src -s -d dist && cp -r src/service/views dist/service/views",
    "start:prod": "yarn build && pm2 start ./dist/service/index.js --name blockchain --log activity.log",
    "pkg": "yarn build && pkg ./dist/service/index.js"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "crypto-js": "^4.0.0",
    "dotenv": "^8.2.0",
    "ejs": "^3.1.3",
    "elliptic": "^6.5.2",
    "express": "^4.17.1",
    "pkg": "^4.4.8",
    "set-interval-async": "1.0.32",
    "uuid": "^7.0.3",
    "ws": "^7.2.3"
  },
  "jest": {
    "silent": false,
    "verbose": true,
    "testEnvironment": "node"
  }
}
